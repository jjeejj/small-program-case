/* pages/search/search.wxss */
@import "../movie/movie.wxss";

.search{
    display: flex;
    flex-direction: row;
    font-size: 14px;
    padding-left: 20px;
    padding-top: 20px;
}
.input{
    width: 60%;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: inset 0 0 10px #ccc;
    color: black;
    background-color: #fff;
}
.search button{
    height: 60rpx;
    line-height: 60rpx;
    background-color: #dd5e0e;
    color: #fff;
    text-shadow: black;
    margin-right: 75rpx;
}
.btn-click{
    color: black;
    background-color: palevioletred
}
.input-show{
    padding-left: 20px;
    color: #fff;
    text-align: center;
    font-size: 12px;
}
.hr-text{
    height: 1px;
    width:100%;
    background-color: black;
    border-bottom: 1px solid white;
    margin-top: 10px;
    opacity: 0.2;
}