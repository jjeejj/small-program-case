<view class="content">
    <view class="">
        <image src="{{movie.image}}" mode="aspectFit"></image>
    </view>
    <view class="hr"></view>
    <view class="detail">
        <text>{{movie.text}}</text>
    </view>
    <view class="casts">
        <block wx:for="{{movie.casts}}">
            <image src="{{item.avatars.medium}}" mode="aspectFit"></image>
        </block>
    </view>
    <view class="hr"></view>
    <view class="detail">
        <text>{{movie.summary}}</text>
    </view>
</view>
