page{
    height: 100%;
}

/* pages/main/main.wxss */
.content{
    height: 100%;
    width: 750rpx;
    font-size: 14px;
    color: #fff;
    background: url(../../assets/bg1.jpg);
    background-size: cover;
}

/*当日天气样式*/
.taday{
    height: 50%;
    padding-top: 50rpx;
}
.info{
    padding: 20rpx;
    background: rgba(0, 0,0,0.5);
    box-shadow: 10px 10px 20px rgba(0, 0,0,0.5);    
}
.temp{
    text-align: center;
    font-size: 50px;
}
.weather,.suggest{
    text-align: center;
    margin-bottom: 20rpx;
}
.city{
    text-align: right;
    margin-right: 10rpx;
    font-size: 16px;
    margin-top: 30rpx;
    color: white
}

/*未来天气布局*/

.future{
    display: flex;
    flex-direction: row;
    height: 40%;
    padding-left: 5rpx;
    padding-top: 10rpx;
    padding-bottom: 20rpx;
    text-align: center;
    background-color: #fff;
    background: rgba(0, 0,0,0.1);
    box-shadow: 10px 10px 20px rgba(0, 0,0,0.5);
}
.future-item{
    min-height: 100%;
    width: 235rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
    border: 1px solid coral;
    border-radius: 10px;
    padding-top: 10rpx;
}

.future-item view{
    margin-top: 30rpx;
}